<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/text_view_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_view_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="3dp"
        tools:context=".ChoiceFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_view_left_celebrity"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:layout_margin="3dp" />

            <TextView
                android:id="@+id/text_view_left_celebrity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_view_right_celebrity"
                android:layout_width="220dp"
                android:layout_height="200dp"
                android:layout_margin="3dp" />

            <TextView
                android:id="@+id/text_view_right_celebrity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>